.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
} 

.backImage{
  position: absolute;
  width: 100%;
  height: 100%;
}

.welcome {
  margin-top: 150rpx;
  text-align: center;
  color: #545454;
  line-height: 100rpx;
  font-size: 50rpx;
  z-index: 1;
}

/*表单内容*/
.login-from {
  margin-top: 50rpx;
  flex: auto;
  height:100%;
  z-index: 1;
}


.inputView {
  background-color: #fff;
  opacity: 0.6;
  line-height: 80rpx;
}
/*输入框*/
.inputView .nameImage, .codeImage {
  width: 45rpx;
  height: 45rpx;
  line-height: 80rpx;
  margin-left: 30rpx;
}
 
.inputView .loginLab {
  /*margin: 20rpx 20rpx 20rpx 15rpx;*/
  width: 80rpx;
  height: 80rpx;
  color: #545454;
  line-height: 80rpx;
  margin-left: 15rpx;
  font-size: 35rpx;
}
.inputView .inputText {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  flex: block;
  float: right;
  text-align: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
  color: #545454;
  font-size: 35rpx
}
 
.line {
  width: 100%;
  height: 4rpx;
  background-color: #cccccc;
  margin-top: 4rpx;
}
/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
}
 
.loginBtn {
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  background: rgb(32, 158, 0);
  margin-top: 60rpx;
}

.loginBtn_hover {
  background-color:rgb(32, 120, 0);
}

.goto{
  font-size: 35rpx;
  text-align: center;
  margin-top: 25rpx;
  color: #545454;
}