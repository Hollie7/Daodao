.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
} 

.backImage{
  position: absolute;
  width: 100%;
  height: 100%;
}

.character{
  position: absolute;
  bottom: 0rpx;
  width: 486rpx;
  height: 972rpx;
  z-index: 1;
}

.buttons_top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 50rpx;
  z-index: 2;
}

.goto_left{
  font-size: 45rpx;
  color:white;
  position: fixed;
  left: 50rpx;
  text-decoration-line: underline;
}

.goto_right{
  font-size: 45rpx;
  color:white;
  position: fixed;
  right: 50rpx;
  text-decoration-line: underline;
}

.goto_bot{
  font-size: 45rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  color:white;
  position: fixed;
  bottom: 40rpx;
  text-align: center;
  text-decoration-line: underline;
  z-index: 2;
}

.buttons {
  position: fixed;
  top: 50rpx;
  margin-top: 30rpx;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.buttons_mid {
  margin-top: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 40vw;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color:white;
  color: rgb(31, 29, 29);
  border-radius: 30rpx;
  opacity: 0.6;
}

.btn_hover {
  background-color:white;
  opacity: 0.8;
}