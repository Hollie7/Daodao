.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
} 

.backImage{
  position: absolute;
  width: 100%;
  height: 100%;
}

.character{
  position: absolute;
  bottom: 100rpx;
  width: 400rpx;
  height: 400rpx;
  opacity: 0.75;
  z-index: 1;
}

.buttons {
  margin-top: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.btn1 {
  width: 35vw;
  background-color:rgb(144, 230, 245);
  color: rgb(31, 29, 29);
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn1_hover {
  background-color:rgb(82, 218, 241);
}

.btn2 {
  width: 35vw;
  margin-top: 50rpx;
  background-color:rgb(113, 167, 247);
  color: rgb(31, 29, 29);
  border-radius: 30rpx;
}

.btn2_hover {
  background-color:rgb(87, 152, 250);
}

.btnImg {
  margin-right: 0rpx;
  margin-top: 0rpx;
  width: 50rpx;
  height: 50rpx;
}

.btn1::after {
  border-radius: 98rpx;
  border: 0; 
}