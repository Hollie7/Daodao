/* pages/voiceText/voiceText.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
} 

.backImage{
  position: absolute;
  width: 100%;
  height: 100%;
}

.character{
  position: absolute;
  bottom: 100rpx;
  width: 400rpx;
  height: 400rpx;
  opacity: 0.75;
  z-index: 1;
}

.conts{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: auto;
  background: #fff;
  opacity: 0.6;
  z-index: 2;
}
.conts .areas{
  width: 90%;
  height: 75%;
  font-size: 35rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
  overflow: hidden;   
  position: relative; 
}

.service {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
  opacity: 0.6;
  border-bottom: 1px solid #ccc;
  z-index: 2;
}

.service .left {
  line-height: 100rpx;
  font-size: 40rpx;
  display: inline-block;
}

.buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 37rpx;
  z-index: 2;
}
.btn {
  width: 30vw;
  background-color:rgb(144, 230, 245);
  color: rgb(31, 29, 29);
  border-radius: 20rpx;
  font-size: 35rpx;
}

.btn_center{
  width: 30vw;
  background-color:rgb(144, 230, 245);
  color: rgb(31, 29, 29);
  border-radius: 20rpx;
  font-size: 35rpx;
  margin-right: 5vw;
  margin-left: 5vw;
}

.btn_hover {
  background-color:rgb(82, 218, 241);
}