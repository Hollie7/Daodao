/* pages/recommend/recommend.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
} 

.backImage{
  position: absolute;
  width: 100%;
  height: 100%;
}

.character{
  position: absolute;
  bottom: 0rpx;
  width: 486rpx;
  height: 972rpx;
  z-index: 1;
}

.welcome {
  width: 80%;
  margin-top: 150rpx;
  text-align: center;
  color: white;
  line-height: 60rpx;
  font-size: 45rpx;
  z-index: 2;
}

.buttons {

  margin-top: 30rpx;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.buttons_wjx {
  width: 90vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 5vh;
  z-index: 2;
}

.buttons_wjx .btn {
  width: 40vw;
  font-family: cursive;
  background-color:white;
  color: #000000;
  border-radius: 20rpx;
  font-size: 35rpx;
  opacity: 0.6;
}

.buttons_wjx .btn_hover {
  background-color:white;
  opacity: 0.8;
}